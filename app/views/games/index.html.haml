%h1 Listing games

%table.table.table-responsive.table-striped.table-bordered
  %thead.header-table
    %tr
      %th Name
      %th Home
      %th Visit
      %th Game date
      %th Round
      %th Home score
      %th Visit score
      %th
      %th
      %th

  %tbody
    - @games.each do |game|
      %tr
        %td= game.name
        %td= game.home.name
        %td= game.visit.name
        %td= game.game_date
        %td= game.round.name
        %td= game.home_score
        %td= game.visit_score
        %td= link_to 'Show', game_dashboard_path(game.id)
        %td= link_to 'Edit', edit_game_path(game)
        %td= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Game', new_game_path
